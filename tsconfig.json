{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "es2015",
    "target": "es2015",
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react",
    "outDir": "./build/",
    "suppressExcessPropertyErrors": false,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "baseUrl": "./src/ts/",
    "paths": {
      "components/*": [
        "components/*"
      ],
      "modals/*": [
        "components/modal/*"
      ],
      "mutations": [
        "relay/mutations"
      ],
      "relay": [
        "relay"
      ],
      "utils": [
        "utils"
      ]
    },
    "allowUnusedLabels": false,
    "noUnusedLocals": false
  },
  "typeRoots": [
    "./@types",
    "./node_modules/@types"
  ]
}