{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "es2015",
    "target": "es2015",
    "noImplicitAny": false,
    "sourceMap": true,
    "jsx": "react",
    "outDir": "./build/",
    "suppressExcessPropertyErrors": false,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "baseUrl": "./src/ts/",
    "allowUnusedLabels": false,
    "noUnusedLocals": false
  },
  "include": [
    "./node_modules/**/*",
    "./src/**/*"
  ],
  "typeRoots": [
    "./@types",
    "./node_modules/@types"
  ]
}