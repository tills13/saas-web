{
    "defaultSeverity": "error",
    "extends": [
      "tslint-config-standard",
      "tslint-react"
    ],
    "jsRules": {},
    "rules": {
      "array-bracket-spacing": [ true, "always" ],
      "jsx-alignment": [ true, "always" ],
      "jsx-boolean-value": false,
      "jsx-curly-spacing": [ true, "always" ],
      "jsx-equals-spacing": [ true, "never" ],
      "jsx-no-bind": [ true, "always" ],
      "jsx-no-lambda": { "severity": "warning", "options": true },
      "jsx-no-multiline-js": false,
      "jsx-no-string-ref": [ true, "always"],
      "jsx-self-close": [ true, "always"],
      "jsx-space-before-trailing-slash": [ true, "always"],
      "jsx-wrap-multiline": [ true, "always" ],
      "no-shadowed-variable": [ true, "always" ],
      "no-use-before-declare": false,
      "no-unused-variable": false,
      "object-curly-spacing": [ true, "always" ],
      "object-literal-shorthand": [ true, "always" ],
      "quotemark": [ true, "double", "avoid-escape", "avoid-template" ],
      "strict-type-predicates": false,
      "triple-equals": [ true, "allow-undefined-check", "allow-null-check" ]
    },
    "rulesDirectory": []
  }